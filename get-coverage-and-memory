#!/bin/bash

# 
# Usage: ./get-coverage-and-memory <repo-path>
# repo-path:     relative path to dir of repo
#
# E.g.: ./get-coverage-and-memory ./test-repo

# find command must be on one line, simply add, do not edit into multi-lines
find $1 -name 'package.json' -not -path "*node_modules*" -execdir yarn test --logHeapUsage --coverage --watchAll=false \;
